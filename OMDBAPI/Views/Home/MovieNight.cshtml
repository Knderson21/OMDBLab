@{
}

<form method="post" asp-action="MovieNight">
    Search for movie <input type="text" name="title1" />    

    Search for movie <input type="text" name="title2" />    

    Search for movie <input type="text" name="title3" />
    <input type="submit" />
</form>
@{
    if(Model != null)
    {
    <div class="row">
           @{ foreach(MovieModel m in Model)
                {
                    <div class="card col-4">
                        <img class="card-img-top" src="@m.Poster" /> 
                        <div class="card-body">
                            <h1>@m.Title</h1>
                            <p>@m.Plot</p>
                            <p>Year released: @m.Year</p>
                            <p>Runtime: @m.Runtime</p>
                            <p>Director: @m.Director</p>
                        </div>
                    </div>
                }
            }
    </div>
        
        
    }
}

